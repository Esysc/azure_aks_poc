# Azure AKS Deployment Variables
# Copy this file to terraform.tfvars and fill in your values

subscription_id     = "your-subscription-id"
resource_group_name = "aks-poc-rg"
location            = "westeurope"
cluster_name        = "aks-poc-cluster"
kubernetes_version  = "1.32"
node_count          = 2
vm_size             = "Standard_D2s_v3"
backend_replicas    = 2
frontend_replicas   = 2
frontend_dns_label  = "train-routing-app"

tags = {
  Environment = "Production"
  Project     = "AKS-POC"
  ManagedBy   = "Terraform"
}
